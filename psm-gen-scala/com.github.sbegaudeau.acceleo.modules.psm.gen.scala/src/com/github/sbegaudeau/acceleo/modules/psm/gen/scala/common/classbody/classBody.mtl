[/template]

[template public genFields (aClass : Class) ]
[for (aField : Field | aClass.fields)]
[aField.genOverride()/][if (aField.isFinal)]val [else]var [/if][aField.genName()/]: [aField.genType()/];
[/for]
[/template]

[template public genConstructors (aClass : Class) ]
[for (aConstructor : Constructor | aClass.constructors)]
def this([aConstructor.parameters.genParameter()->sep(', ')/]) = {
    this();
}
[/for]
[/template]

